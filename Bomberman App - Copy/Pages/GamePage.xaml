<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="Bomberman_App.Pages.GamePage"
             Title="">

    <Grid>
        <skia:SKCanvasView x:Name="canvasView"
                   PaintSurface="OnPaintSurface"
                   EnableTouchEvents="True" />

        <Grid x:Name="PauseMenuOverlay" 
          IsVisible="False" 
          BackgroundColor="#80000000">

            <Frame VerticalOptions="Center" 
               HorizontalOptions="Center"
               BackgroundColor="#2c3e50"
               CornerRadius="15"
               Padding="40, 35">
                <VerticalStackLayout Spacing="25">
                    <Label Text="Paused"
                       FontSize="42"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalOptions="Center" />

                    <Button Text="Return to Level Selection"
                        BackgroundColor="#e74c3c"
                        TextColor="White"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        FontSize="16"
                        Padding="20,12"
                        Clicked="OnReturnToMenuClicked" />  
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <Grid x:Name="GameOverOverlay" 
              IsVisible="False" 
              BackgroundColor="#80000000">

            <Frame VerticalOptions="Center" 
                   HorizontalOptions="Center"
                   BackgroundColor="#2c3e50"
                   CornerRadius="15"
                   Padding="40, 35">
                <VerticalStackLayout Spacing="25">
                    <Label Text="Game Over"
                           FontSize="42"    FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />

                    <Button Text="Back to Level Selection"
                            BackgroundColor="#e74c3c"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            FontSize="16"    Padding="20,12"  Clicked="OnReturnToMenuClicked" />
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <Grid x:Name="YouWinOverlay" 
              IsVisible="False" 
              BackgroundColor="#80000000">

            <Frame VerticalOptions="Center" 
                   HorizontalOptions="Center"
                   BackgroundColor="#2c3e50"  CornerRadius="15"
                   Padding="40, 35">
                <VerticalStackLayout Spacing="25">
                    <Label Text="You Win!"
                           FontSize="42"    FontAttributes="Bold"
                           TextColor="White"
                           HorizontalOptions="Center" />

                    <Button Text="Back to Level Selection"
                            BackgroundColor="#22c55e"
                            TextColor="White"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            FontSize="16"    Padding="20,12"  Clicked="OnReturnToMenuClicked" />
                </VerticalStackLayout>
            </Frame>
        </Grid>
    </Grid>
    
</ContentPage>